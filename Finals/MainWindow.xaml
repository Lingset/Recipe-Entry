<Window x:Class="Finals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your App" Height="450" Width="800" Background="#F0F0F0">

    <Grid>
        <!-- Title or Header -->
        <TextBlock Text="Welcome to Our Application" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Century Gothic" FontStyle="Italic" FontSize="40" Margin="0,20,0,0" Height="47"/>

        <!-- Buttons for navigation -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Recipe Entry" Width="120" Height="30" Margin="0,5" Click="RecipeEntryButton_Click"/>
            <Button Content="About Developers" Width="120" Height="30" Margin="0,5" Click="AboutDevelopersButton_Click"/>
        </StackPanel>

        <!-- Frame to host pages -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
